<h1>Hello World</h1>
<form action="/users" method="post">
   <input type="hidden" 
    name="authenticity_token" value="<%= form_authenticity_token %>">
  <label>
    Username:
    <input name="user[username]" type="text"/>
  </label>
  <label>
    Email:
    <input name="user[email]" type="text"/>
  </label>
  <label>
    Password:
    <input name="user[password]" type="password"/>
  </label>
  <input type="submit">
</form>